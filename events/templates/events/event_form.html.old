{% extends 'base.html' %}

{% block content %}
<h2>Pranešti apie renginį</h2>
<form action="" method="post" enctype="multipart/form-data" >
    {% csrf_token %}
    {{ form.id }}
        <p>Laukeliai, pažymėti žvaigždute <abbr title="Required">*</abbr>, yra privalomi.</p>
        <p>
            <label for="id_title">{{ form.title.label }}<abbr title="Required">*</abbr></label><br />
            {{ form.title }}
            {% if form.title.errors %}
                <span class="error">
                    {% for error in form.title.errors %}
                        {{ error }} 
                    {% endfor %}
                </span>
            {% endif %}
            {% if form.title.help_text %}<br /><span class="helptext">{{form.title.help_text }}</span>{% endif %}
        </p>
        <p>
            <label for="id_summary">{{ form.summary.label }}</label><br />
            {{ form.summary }}
            {% if form.summary.errors %}
                <span class="error">
                    {% for error in form.summary.errors %}
                        {{ error }} 
                    {% endfor %}
                </span>
            {% endif %}
            {% if form.summary.help_text %}<br /><span class="helptext">{{form.summary.help_text }}</span>{% endif %}
        </p>
        <p>
            <label for="id_body">Išsamus renginio aprašymas<abbr title="Required">*</abbr></label><br />
            {{ form.body }}
            {% if form.body.errors %}
                <span class="error">
                    {% for error in form.body.errors %}
                        {{ error }} 
                    {% endfor %}
                </span>
            {% endif %}
            {% if form.body.help_text %}<br /><span class="helptext">{{form.body.help_text }}</span>{% endif %}
        </p>
        <p>
            <label for="id_start_date">{{ form.start_date.label }}<abbr title="Required">*</abbr></label>
            {{ form.start_date }}
            {% if form.start_date.errors %}
                <span class="error">
                    {% for error in form.start_date.errors %}
                        {{ error }} 
                    {% endfor %}
                </span>
            {% endif %}
            {% if form.start_date.help_text %}<br /><span class="helptext">{{form.start_date.help_text }}</span>{% endif %}
        </p>
        <p>
            <label for="id_end_date">{{ form.end_date.label }}</label>
            {{ form.end_date }}
            {% if form.end_date.errors %}
                <span class="error">
                    {% for error in form.end_date.errors %}
                        {{ error }} 
                    {% endfor %}
                </span>
            {% endif %}
            {% if form.end_date.help_text %}<br /><span class="helptext">{{form.end_date.help_text }}</span>{% endif %}
        </p>
        <p>
            <label for="id_image">{{ form.image.label }}<abbr title="Required">*</abbr></label>
            {{ form.image }}
            {% if form.image.errors %}
                <span class="error">
                    {% for error in form.image.errors %}
                        {{ error }} 
                    {% endfor %}
                </span>
            {% endif %}
            {% if form.image.help_text %}<br /><span class="helptext">{{form.image.help_text }}</span>{% endif %}
        </p>
        <p>
            <label for="id_ticket_price">{{ form.ticket_price.label }}</label>
            {{ form.ticket_price }}
            {% if form.ticket_price.errors %}
                <span class="error">
                    {% for error in form.ticket_price.errors %}
                        {{ error }} 
                    {% endfor %}
                </span>
            {% endif %}
            {% if form.ticket_price.help_text %}<br /><span class="helptext">{{form.ticket_price.help_text }}</span>{% endif %}
        </p>
    
    <button type="submit" value="Post" >Pateikti straipsnį</button>
    <a class="cancel" href="/">Atšaukti</a>
</form>
{% if form.errors %}
    <p class="error">
        Straipsnio pateikti nepavyko. Atidžiai perskaitykite klaidų pranešimus ir pabandykite dar kartą.
    </p>
    {{ form.errors }}
    {% if form.non_field_errors %}
        <ul class="error">
            {% for error in form.non_field_errors %}
            <li>{{ error }}</li>
            {% endfor %}
        </ul>
    {% endif %}
{% endif %}
{% endblock %}
